{
  "name": "DocHub-Backend",
  "version": "0.1.0",
  "description": "Backend application for DocHub",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:vitechlab/dochub/DobHubBackend.git"
  },
  "author": "Szigony Tech",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "production": "node dist/models/migrate.js && nodemon --delay 1 dist/server.js",
    "serve": "node dist/models/migrate.js && nodemon --delay 1 dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/async": "^3.2.13",
    "@types/bcrypt-nodejs": "^0.0.31",
    "@types/bluebird": "^3.5.36",
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.5.0",
    "@types/lodash": "^4.14.182",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^4.7.56",
    "@types/morgan": "^1.9.3",
    "@types/node": "^10.17.60",
    "@types/nodemailer": "^6.4.4",
    "@types/request": "^2.48.8",
    "@types/supertest": "^2.0.12",
    "@types/umzug": "^2.3.3",
    "@types/validator": "^13.7.2",
    "assert-request": "^1.0.6",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "concurrently": "^7.1.0",
    "cors": "^2.8.5",
    "events": "^3.3.0",
    "express": "^4.18.1",
    "express-fileupload": "^1.3.1",
    "express-validator": "^6.14.1",
    "jest": "^28.0.3",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.16",
    "path": "^0.12.7",
    "sequelize": "^6.19.0",
    "sequelize-typescript": "^2.1.3",
    "shelljs": "^0.8.5",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.0",
    "tslint": "^6.1.3",
    "type-assertion": "^1.0.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express-fileupload": "^1.2.2",
    "@types/sequelize": "^4.28.13",
    "async": "^3.2.3",
    "bcrypt-nodejs": "^0.0.3",
    "class-validator": "^0.13.2",
    "errorhandler": "^1.5.1",
    "express-flash": "^0.0.2",
    "express-session": "^1.17.2",
    "forever": "^0.15.3",
    "fs": "^0.0.1-security",
    "fs-extra": "^10.1.0",
    "lusca": "^1.7.0",
    "nodemailer": "^6.7.4",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "text-diff": "^1.0.1",
    "umzug": "^3.1.1",
    "uuid": "^8.3.2",
    "word-extractor": "^1.0.4"
  }
}
